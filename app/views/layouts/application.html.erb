<!DOCTYPE html>
<html>
<head>
  <title>WriterApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if signed_in? %>
		<%= render 'layouts/nav_bar' %>
	<% end %>
	<% flash.each do |key, value| %>
		<%= content_tag(:div, value) %><br /> 
	<% end %>
	<%= yield %>
</body>
</html>
